<%= form_for @user, :url => {:class => 'profile' ,:action => 'edit'}, :html => {:id => "profile_form"}, remote: true do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-hover" align="center">
    <tbody>

      <tr>
        <td colspan="2"><%= "名前"%></td>
        <td colspan="2"><%= f.text_field :name%></td>
      </tr>
      <tr>
        <td colspan="2"><%= "ユーザの画像" %></td>
        <td><%= image_tag @user.image.url(:thumb)%></td>
        <td id="upload-image"><%= f.file_field :image %></td>
      </tr>
        <%= @user.study_abroads[0].school_name %>

 <%= f.fields_for :study_abroads do |sh| %>
 <tr>
    <td><%= "留学先"%></td>
    <td colspan="2"><%= sh.text_field :school_name%></td>
  </tr>
  <tr>
    <td><%= "留学期間"%></td>
    <td colspan="2"><%= sh.text_field :start_at, :type=>'date', :value=>Date.today %>から<%= f.text_field :end_at, :type=>'date',:value=>Date.today %></td>
  </tr>

  <tr>
    <td><%= " " %></td>
  </tr>
  <% end %>

    </tbody>
  </table>
<% end %> 

<script type="text/javascript">
  image_include = false;

 $('#upload-image').change(function(){
    image_include = true;

 });
</script>